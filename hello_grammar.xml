<?xml version="1.0" ?>

<grammar xmlns="http://www.w3.org/2001/06/grammar" xml:lang="en-US">
    <rule id="Greeting" scope="public">
    	<item repeat="0-1">
            <one-of>
        		<item> Give me the </item>
        		<item> Please give me the </item>
        		<item> What is the </item>
        	</one-of>
    	</item>

        <item>
            <ruleref uri="#RequestType" />
            <tag> out.RequestTypeField = rules.RequestType.RequestTypeField; </tag>
        </item>

        <item repeat="0-1">
        	<one-of>
        		<item> for </item>
        		<item> of </item>
        	</one-of>
        </item>

        <item>
        	<ruleref uri="business_grammar.xml#Business" />
            <tag> out.BusinessField = rules.Business.BusinessField; </tag>
        </item>

        <item repeat="0-1">
        	<one-of>
        		<item> in </item>
        	</one-of>
        </item>

        <!-- <item repeat="0-1">
            <ruleref uri="location_grammar.xml#Location" />
            <tag> out.LocationField = rules.Location.LocationField; </tag>
        </item> -->

        <item repeat="0-1">
        	<one-of>
        		<item> please </item>
        	</one-of>
        </item>
	</rule>

    <rule id="RequestType" scope="public">
        <one-of>
            <item> Hours <tag> out.RequestTypeField = "hours"; </tag> </item>
            <item> Address <tag> out.RequestTypeField = "address"; </tag> </item>
            <item> Phone number <tag> out.RequestTypeField = "phone"; </tag> </item>
        </one-of>
    </rule>
</grammar>
